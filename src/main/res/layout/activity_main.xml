<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wall1"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:tag="false"
                app:srcCompat="@drawable/wallpaper1" />

            <ImageView
                android:id="@+id/wall2"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:tag="false"
                app:srcCompat="@drawable/wallpaper2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wall3"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:tag="false"
                app:srcCompat="@drawable/wallpaper3" />

            <ImageView
                android:id="@+id/wall4"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:tag="false"
                app:srcCompat="@drawable/wallpaper4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wall5"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:tag="false"
                app:srcCompat="@drawable/wallpaper5" />

            <ImageView
                android:id="@+id/wall6"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="5dp"
                android:tag="false"
                app:srcCompat="@drawable/wallpaper6" />
        </LinearLayout>

        <Button
            android:id="@+id/linkButton"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:background="#9FA7C6"
            android:text="View Selected Button"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>